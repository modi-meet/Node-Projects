# Copy this file to `.env` and fill in real values.
# Local defaults are provided as examples but you should set real secrets for deployments.

# MongoDB connection URI
MONGO_URI=mongodb://127.0.0.1:27017/blogify

# JWT secret used to sign tokens
JWT_SECRET=your_jwt_secret_here

# Port to run the app on
PORT=8001

# Cookie name used for auth
COOKIE_NAME=Token
