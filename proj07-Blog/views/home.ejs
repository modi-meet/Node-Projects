<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <%= JSON.stringify(user) %> 
    
    <h1>Homepage</h1>

    <div>
        <% blogs.forEach(blog => { %>
         <div class="card m-3" style="width: 18rem;">
            <img class="card-img-top" src="<%= blog.coverImageURL %>" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><%= blog.title  %></h5>
                <a href="/blog/<%= blog._id %>" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
        <% }) %>

    </div>
    
    <%- include('./partials/scripts') %>
</body>
</html>